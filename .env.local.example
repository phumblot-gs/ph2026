# Copier ce fichier vers .env.local et remplir avec vos vraies clés
# cp .env.local.example .env.local

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_PARTY_NAME=Nous Parisiens
NEXT_PUBLIC_CANDIDATE_NAME=Paul HATTE

# Email Configuration (Resend)
RESEND_API_KEY=re_YOUR_API_KEY

# Environment
NEXT_PUBLIC_ENV=dev
NODE_ENV=development

# Stripe Configuration (Mode Test)
# Créer un compte sur https://dashboard.stripe.com/
# Récupérer les clés dans Developers > API keys (mode Test)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Google Places API
# Créer un projet sur https://console.cloud.google.com/
# Activer Places API et créer une clé API
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=AIza_YOUR_GOOGLE_API_KEY

# Slack Integration
# Créer une app sur https://api.slack.com/apps
# Voir docs/slack-app-setup.md pour la configuration complète
SLACK_CLIENT_ID=YOUR_SLACK_CLIENT_ID
SLACK_CLIENT_SECRET=YOUR_SLACK_CLIENT_SECRET
SLACK_SIGNING_SECRET=YOUR_SLACK_SIGNING_SECRET
SLACK_BOT_TOKEN=xoxb-YOUR_BOT_TOKEN
NEXT_PUBLIC_SLACK_REDIRECT_URI=http://localhost:3000/api/slack/callback